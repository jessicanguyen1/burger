<div class="container">
    <div class="row">
        <img src="assets/img/burger-background.jpg" style="width: 100%; height: 100%">
    </div>
    <div class="row header-burger">
        <h1>Eat-Da-Burger</h1>
    </div>
    <div class="row">
        <img src="assets/img/burger-background.jpg" style="width: 100%; height: 100%">
    </div>




    <br>

    <div id='avail'>
        <div class="row">
            <div class="col-sm-6">
                <ul>
                    {{#each burgers}} {{#unless this.devoured}}
                    <li>
                        {{this.id}}. {{this.burger_name}}

                        <form action="/api/burgers" method="DELETE">
                            <input type="hidden" name="id" value={{this.id}}>
                            <button class="btn btn-warning" type="submit">Devour it!</button>
                        </form>



                        {{!-- <form class="create-update-form" action="/api/burgers" method="POST">
                            <div class="form-group">
