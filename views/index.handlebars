                                <input type="text" id="dab" name="burger_name">
                            </div>
                            <button class="btn btn-primary" type="submit">Add Burger</button>
                        </form> --}}

                    </li>
                    {{/unless}} {{/each}}
                </ul>
            </div>

        </div>

    </div>

    <div id='devoured'>
        <div class="row">
            <div class="col-sm-6">
                <ul>
                    {{#each burgers}} {{#if this.devoured}}
                    <li>
                        {{this.id}}. {{this.burger_name}}
                    </li>
                    {{/if}} {{/each}}
                </ul>

            </div>

        </div>

    </div>

    <div id='add'>
        <h2>Add a Burger: </h2>

        <form class="create-update-form" action="/api/burgers" method="POST">
            <div class="form-group">
                <label for="dab">Burger Name:</label>
                <input type="text" id="dab" name="burger_name">
            </div>
            <button class="btn btn-primary" type="submit">Add Burger</button>
        </form>
    </div>

</div>